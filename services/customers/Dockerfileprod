FROM python:3.10-slim

ENV SQLALCHEMY_DATABASE_URI=postgresql://postgres:postgres@lmsdb:5432/lms_db

RUN apt-get update -yqq \
    && apt-get install -yqq --no-install-recommends \
    netcat-openbsd \
    && apt-get -q clean

WORKDIR /app/services/customers

COPY ./services/customers/requirements.txt /app/services/customers/requirements.txt

RUN pip install --no-cache-dir --upgrade pip \
    && pip install --no-cache-dir -r requirements.txt

COPY ./services/customers/app /app

WORKDIR /app/services/customers/app

EXPOSE 6061

CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "6061"]
